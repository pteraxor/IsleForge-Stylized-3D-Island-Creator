<Page x:Class="Prototyping.Pages.TextureAndBumpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:hx="clr-namespace:HelixToolkit.Wpf.SharpDX;assembly=HelixToolkit.Wpf.SharpDX"
      mc:Ignorable="d"
      Title="TextureAndBumpPage">

    <Grid>
        <Grid>
            <hx:Viewport3DX Tag="HelixViewport" Background="Black">
                <hx:DirectionalLight3D Direction="-1,-1,-1" Color="White" />
                <hx:AmbientLight3D Color="#404040" />
            </hx:Viewport3DX>
        </Grid>
    </Grid>
</Page>
