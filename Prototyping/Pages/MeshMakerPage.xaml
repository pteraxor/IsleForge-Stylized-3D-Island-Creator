<Page x:Class="Prototyping.Pages.MeshMakerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Prototyping"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MeshMakerPage">

    <local:BaseLayout>
        <!-- Header -->
        <local:BaseLayout.HeaderContent>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Create Mesh" FontSize="20" FontWeight="Bold"/>
            </StackPanel>
        </local:BaseLayout.HeaderContent>

        <!-- Left Tools Panel -->
        <local:BaseLayout.LeftContent>
            <StackPanel>

                <Button Content="Create mesh" Margin="0,15,0,0" Click="CreateMesh_Click"/>

                <ProgressBar Tag="MeshProgressBar"
                 Minimum="0" Maximum="100"
                 Height="20"
                 Visibility="Visible"
                 Margin="10"/>

            </StackPanel>
        </local:BaseLayout.LeftContent>

        <!-- Footer Navigation -->
        <local:BaseLayout.FooterContent>
            <DockPanel HorizontalAlignment="Stretch">
                <Grid HorizontalAlignment="Center" Width="250">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".25*"/>
                        <ColumnDefinition Width=".75*"/>
                        <ColumnDefinition Width=".75*"/>
                        <ColumnDefinition Width=".25*"/>
                    </Grid.ColumnDefinitions>

                    <!--  <Button Content="Back" Margin="5" Grid.Column="1" Click="Back_Click"/>-->

                   <!--  <Button Content="Next" Margin="5" Grid.Column="2" Click="Next_Click"/>-->
                </Grid>
            </DockPanel>
        </local:BaseLayout.FooterContent>

        <!-- Drawing Canvas -->
        <local:BaseLayout.RightContent>
            <Grid>
                <Canvas Tag="MapCanvas" Background="Black"/>
            </Grid>
        </local:BaseLayout.RightContent>
    </local:BaseLayout>
</Page>
