<Window x:Class="Prototyping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IsleForge: Stylized 3D Island Creator" Height="450" Width="800"
        Background="#F0F0F0">

    <Grid>
        <!-- Define Columns: Left panel (buttons and titles) and Right side (canvas) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Left panel -->
            <ColumnDefinition Width="*"/> 
            <!-- Canvas (right side), takes up all remaining space -->
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Border Grid.Column="0" Background="LightGray" Padding="7">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <!-- Header -->
                    <RowDefinition Height="*"/>
                    <!-- Main content (buttons/options) -->
                    <RowDefinition Height="50"/>
                    <!-- Footer -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Title" FontSize="20" FontWeight="Bold"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                

                <!-- Middle Content (Buttons) -->
                <StackPanel Grid.Row="1" Margin="5">
                    <Button Content="Button 1" Height="40" Margin="5"/>
                    <Button Content="Button 2" Height="40" Margin="5"/>
                    <Button Content="Button 3" Height="40" Margin="5"/>
                </StackPanel>

                <!-- Footer -->
                <DockPanel Grid.Row="2" HorizontalAlignment="Stretch" Background="DarkGray">
                    <!-- in here to differentiate -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Button 1" Height="30" Margin="5"/>
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Border>

        <!-- Right Side: Canvas -->
        <Border Grid.Column="1" Background="White" Margin="10">
            <Canvas Background="White"/>
        </Border>
    </Grid>
</Window>
